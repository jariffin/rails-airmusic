

<div class="container">
  <div class="content">
    <div class="cards">
      <% @instruments.each do |i| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path(i.photo.key, width: 300, height: 400, crop: :fill) if i.photo.attached? %>')">
          <%= link_to i.name, instrument_path(i) %>
        </div>
      <% end %>
    </div>
  </div>
</div>



