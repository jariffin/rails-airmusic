<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Add a new instrument</h1>
      <%= simple_form_for @instrument do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :price_per_day %>
      <%= f.input :photo, as: :file %>
      <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
